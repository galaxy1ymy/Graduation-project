<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "https://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 加载外部配置文件（可选） -->
    <!-- <properties resource="application.properties"/> -->
    <context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">
        <!-- 禁止生成注释 -->

        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 数据库连接配置 -->
        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/employee_staff?characterEncoding=UTF8&amp;autoReconnect=true&amp;serverTimezone=Asia/Shanghai"
                userId="employee_staff"
                password="123456">
        </jdbcConnection>
        <!-- 实体类生成配置 -->
        <javaModelGenerator
                targetPackage="com.example.employee.staff.domain"
                targetProject="../staff/src/main/java">
            <!-- 开启 Lombok 注解（按需添加） -->
            <!-- <property name="constructorBased" value="false"/> -->
            <!-- <property name="useLombok" value="true"/> -->
        </javaModelGenerator>
        <!-- XML 映射文件生成配置 -->
        <sqlMapGenerator
                targetPackage="mapper"
                targetProject="../staff/src/main/resources">
        </sqlMapGenerator>
        <!-- Mapper 接口生成配置 -->
        <javaClientGenerator
                type="XMLMAPPER"
                targetPackage="com.example.employee.staff.mapper"
                targetProject="../staff/src/main/java">
        </javaClientGenerator>
        <!-- 指定 member 表生成规则 -->
   <!--     <table tableName="staff" domainObjectName="Staff"></table>-->
        <!--<table tableName="login" domainObjectName="Login"></table>-->
        <table tableName="attendance_records" domainObjectName="AttendanceRecords"></table>
       <!-- <table tableName="leave_request" domainObjectName="LeaveRequest"></table>-->
      <!--  <table tableName="business" domainObjectName="Business"></table>-->
       <!-- <table tableName="overtime" domainObjectName="Overtime"></table>-->
       <!-- <table tableName="going_out" domainObjectName="GoingOut"></table>-->
        <!--<table tableName="meeting" domainObjectName="Meeting"></table>-->
<!--        <table tableName="goods" domainObjectName="Goods"></table>-->



    </context>
</generatorConfiguration>